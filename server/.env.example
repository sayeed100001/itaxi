NODE_ENV=development
PORT=5000

# Database - Update with your MySQL credentials
DATABASE_URL="mysql://username:password@localhost:3306/itaxi"

# JWT - REQUIRED: Generate a secure random string (see README for instructions)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# CORS
CLIENT_URL=http://localhost:3000

# WhatsApp Cloud API - REQUIRED: Get from Meta Business Suite
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_APP_SECRET=

# SMS Fallback (optional)
SMS_PROVIDER=

# Stripe - REQUIRED: Get from Stripe Dashboard
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_TEST_MODE=true

# Payout Controls
DISABLE_PAYOUTS=false
ALLOW_AUTO_PAYOUTS=false

# OpenRouteService - REQUIRED: Get from openrouteservice.org
OPENROUTESERVICE_API_KEY=
ORS_TIMEOUT_MS=5000

# Location Anomaly Detection
SPEED_THRESHOLD_KMH=150
ANOMALY_THRESHOLD=3

# Socket.IO Spatial Broadcasting
GEOHASH_PRECISION=6

# Redis - Optional for Socket.IO horizontal scaling
REDIS_URL=redis://localhost:6379

# PM2 Cluster Mode
PM2_CLUSTER=false

# Optional: reCAPTCHA
ENABLE_RECAPTCHA=false
RECAPTCHA_SECRET=

# OTP Configuration
OTP_MAX_PER_HOUR=3
OTP_LOCK_THRESHOLD=5
OTP_LOCK_MINUTES=60
